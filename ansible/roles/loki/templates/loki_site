server {
  listen 80;
  server_name loki.colosseum.website;

  auth_basic "loki auth";
  auth_basic_user_file /etc/nginx/loki_htpasswd;

  location /ready {
    include proxy_params;
    proxy_pass http://127.0.0.1:3100;

    proxy_redirect off;
    auth_basic "off";
  }

  location / {
    include proxy_params;

    proxy_pass http://127.0.0.1:3100;
    proxy_redirect off;
  }
}
