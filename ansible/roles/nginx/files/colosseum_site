server {
    server_name .colosseum.website;

    location /nginx_status {
      stub_status;
    }

    location / {
      include proxy_params;
      proxy_pass http://unix:/home/devops/colosseum_website/gunicorn.sock;
    }

    client_max_body_size 16M;

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/staging.colosseum.website/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/staging.colosseum.website/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = staging.colosseum.website) {
      return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name .colosseum.website;
    listen 80;
    return 404; # managed by Certbot
}
