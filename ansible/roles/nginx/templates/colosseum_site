server {
    server_name .colosseum.website;

    location /nginx_status {
      stub_status;
    }

    location / {
      include proxy_params;
      proxy_pass http://unix:{{ install_folder }}/colosseum_website/gunicorn.sock;
    }

    client_max_body_size 16M;
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/colosseum.website/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/colosseum.website/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = colosseum.website) {
        return 301 https://$host$request_uri;
    }

    if ($host = www.colosseum.website) {
        return 301 https://$host$request_uri;
    }

    if ($host = www2.colosseum.website) {
        return 301 https://$host$request_uri;
    }

    if ($host = api.colosseum.website) {
        return 301 https://$host$request_uri;
    }

    if ($host = staging.colosseum.website) {
        return 301 https://$host$request_uri;
    }

    if ($host = *.colosseum.website) {
        return 301 https://$host$request_uri;
    }

    client_max_body_size 16M;
    listen 80;
    server_name .colosseum.website;
    return 404; # managed by Certbot
}
